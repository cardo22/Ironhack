<h1>Creat new concert</h1>

<div>
	<% if @concerts.errors.any? %>
	<ul>
		<% @concerts.errors.full_messages.each do |error| %>
		<li>
			<%= error %>
		</li>
		<% end %>
	</ul>
	<% end %>
</div>

<%= form_for @concerts do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<br>
	<div>
		<%= f.label :artist %>
		<%= f.text_field :artist %>
	</div>
	<br>
	<div>
		<%= f.label :venue %>
		<%= f.text_field :venue %>
	</div>
	<br>
	<div>
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>
	<br>
	<div>
		<%= f.label :date %>
		<%= f.datetime_local_field :date %>
	</div>
	<br>
	<div>
		<%= f.label :price %>
		<%= f.number_field :price, :step => "0.01"%>
	</div>
	<br>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<br>
	<div>
		<%= f.submit "create event" %>
	</div>
<% end %>